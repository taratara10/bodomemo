<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_todo">

    <fragment
        android:id="@+id/navigation_todo"
        android:name="com.example.bodomemo.ui.todo.TodoFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_todo" >
        <action
            android:id="@+id/action_navigation_todo_to_navigation_create_todo"
            app:destination="@id/navigation_create_todo" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.bodomemo.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_navigation_game_detail"
            app:destination="@id/navigation_game_detail" />
        <argument
            android:name="gameId"
            app:argType="integer"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.bodomemo.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_create_todo"
        android:name="com.example.bodomemo.ui.todo.CreateTodoFragment"
        android:label="Create todo"
        tools:layout="@layout/fragment_create_todo">
        <action
            android:id="@+id/action_navigation_create_todo_to_navigation_todo"
            app:destination="@id/navigation_todo" />
    </fragment>

    <fragment
        android:id="@+id/navigation_game_detail"
        android:name="com.example.bodomemo.ui.search.GameDetailFragment"
        android:label="GameDetailFragment"
        tools:layout="@layout/fragment_game_detail">
        <action
            android:id="@+id/action_gameDetailFragment_to_navigation_search"
            app:destination="@id/navigation_search" />
        <argument
            android:name="gameId"
            app:argType="integer"/>
    </fragment>
</navigation>